<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="720.0" prefWidth="1280.0" spacing="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.virginia.sde.reviews.LoginScreenController">
   <Label text="Course Review">
      <font>
         <Font size="24.0" />
      </font>
   </Label>
   <Label text="Login" textFill="#4b97f5">
      <font>
         <Font size="18.0" />
      </font>
   </Label>
   <VBox prefHeight="132.0" prefWidth="1109.0" spacing="5">
      <Label text="Username" />
      <TextField fx:id="username" prefHeight="26.0" prefWidth="1051.0">
         <font>
            <Font size="12.0" />
         </font>
      </TextField>
      <Label text="Password" />
      <PasswordField fx:id="password" prefHeight="23.0" prefWidth="195.0">
         <font>
            <Font size="12.0" />
         </font>
      </PasswordField>
      <Button fx:id="loginButton" mnemonicParsing="false" onAction="#handleLoginButtonAction" text="Login" />
   </VBox>
   <Hyperlink text="New User? Create an Account!" textFill="#7584da">
      <font>
         <Font size="14.0" />
      </font></Hyperlink>
   <VBox spacing="5">
      <Label text="New Username" />
      <TextField fx:id="newUsername" prefHeight="20.0" prefWidth="171.0" />
      <Label text="New Password" />
      <PasswordField fx:id="newPassword" prefHeight="20.0" prefWidth="171.0" />
      <Button fx:id="registerButton" mnemonicParsing="false" onAction="#handleRegisterButtonAction" text="Create Account" />
   </VBox>
   <Button fx:id="exitButton" mnemonicParsing="false" onAction="#handleExit" text="Exit Application" />
   <padding>
      <Insets left="350.0" right="350.0" />
   </padding>
</VBox>
